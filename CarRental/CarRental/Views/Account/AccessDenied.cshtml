@{
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }
        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 65vh;
        }

        .content {
            flex: 1; 
            padding: 20px;
        }

        footer {
            background-color: #f8f9fa;
            padding: 10px 20px;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="content">
            <h1>@ViewData["Title"]</h1>
            <p>You do not have permission to view this page.</p>
        </div>
    </div>
</body>
</html>
