@model CarRental.Models.Vehicle
@{
    ViewData["Title"] = "Delete Vehicle";
}

<div class="d-flex flex-column min-vh-65">
    <div class="flex-grow-1">
        <div class="card shadow-sm mt-5">
            <div class="card-header bg-danger text-white text-center py-3">
                <h2>Delete Vehicle</h2>
            </div>
            <div class="card-body p-4">
                <h4 class="text-danger">Are you sure you want to delete this vehicle?</h4>
                <div class="mt-3">
                    <div class="row mb-2">
                        <div class="col-6">
                            <strong>Brand:</strong> @Model.brand
                        </div>
                        <div class="col-6">
                            <strong>Model:</strong> @Model.model
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6">
                            <strong>Year:</strong> @Model.year
                        </div>
                        <div class="col-6">
                            <strong>Location:</strong> @Model.location
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6">
                            <strong>Type:</strong> @Model.type
                        </div>
                        <div class="col-6">
                            <strong>Capacity:</strong> @Model.capacity
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6">
                            <strong>Price per Day:</strong> @(Model.price_per_day.HasValue ? Model.price_per_day.Value.ToString("C") : "N/A")
                        </div>
                        <div class="col-6">
                            <strong>Color:</strong> @Model.color
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-6">
                        <form method="post" asp-action="deleteConfirmed">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </form>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Vehicle" asp-action="Index" class="btn btn-outline-secondary w-100">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    .d-flex.flex-column.min-vh-65 {
        min-height: 65vh;
    }

    footer {
        background-color: #f8f9fa;
        padding: 10px 0;
        width: 100%;
    }

    .flex-grow-1 {
        flex-grow: 1;
    }

</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_Notification" />
}
